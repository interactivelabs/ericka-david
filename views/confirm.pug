extends layout

block content
  include sections/nav
  section#confirm.confirm
    if guest.notFound
      h1 Invitado no se encontro
    else
      h1
        | #{guest.firstname}
        | #{guest.lastname}
      p Te esperamos
        if guest.guests
          span ,  con #{guest.guests} invitado(s)
        if guest.kids
          span ,  con #{guest.kids} niño(s)
      div
        if guest.confirmed
          p Gracias por confirmar
        else
          a(class="button", href="/confirm_final/" + guest.code)
            span Confirmar
            i.fal.fa-check-circle.icon
      p
        a(href="/") "Ver página web de la boda."
      img(src="/img/Front_Final_large.jpg")
      img(src="/img/Back_Final_large.jpg")
    footer
      a.link(href="https://www.freepik.com/free-photos-vectors/brochure") Flores e invitaciones diseñadas por BiZkettE1